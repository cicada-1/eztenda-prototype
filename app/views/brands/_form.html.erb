<%= simple_form_for @brands do |f| %>
  <%= f.input :brand_name, placeholder: 'EzTenda Gin' %>
  <%= f.input :address, placeholder: '123, Street Road, London EZ7 3ND' %>
  <%= f.input :phone_number, placeholder: '01234567890' %>
  <%= f.input :description, as: :text, placeholder: 'Please write a short description about your establishment' %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>